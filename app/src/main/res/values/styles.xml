<resources>
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="themeName">Theme.Light</item>
        <!-- Customize your theme here. -->
        <!--<item name="android:buttonStyle">@style/Theme.Light.Button</item>-->
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="Theme.Light.Button" parent="android:Theme.Holo.Light.DarkActionBar">

        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="Theme.Dark" parent="android:Theme.Holo">
        <item name="themeName">Theme.Dark</item>
        <item name="android:textColor">#fff3f3f3</item>
    </style>

    <style name="Theme.Sepia" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="themeName">Theme.Sepia</item>
        <item name="android:actionBarStyle">@style/Theme.Sepia.ActionBar</item>
        <item name="android:popupMenuStyle">@style/Theme.Sepia.PopupMenu</item>
        <item name="android:textColor">@color/sepia_dark</item>
        <item name="android:windowBackground">@color/sepia_light</item>

        <item name="android:textColorPrimary">@color/sepia_dark</item>
        <item name="android:textColorSecondary">@color/sepia_med</item>
    </style>

    <style name="Theme.Sepia.ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.Sepia.ActionBar.Text</item>
        <item name="android:textColorPrimary">@color/sepia_light</item>
        <item name="android:background">@color/sepia_dark</item>
    </style>

    <style name="Theme.Sepia.ActionBar.Text" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/sepia_light</item>
    </style>

    <style name="Theme.Sepia.PopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/sepia_med</item>
    </style>
</resources>
