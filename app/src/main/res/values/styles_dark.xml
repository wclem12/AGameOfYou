<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Dark" parent="android:Theme.Material">
        <item name="themeName">Theme.Dark</item>
        <item name="android:actionBarStyle">@style/Theme.Dark.ActionBar</item>
        <item name="android:actionOverflowMenuStyle">@style/Theme.Dark.PopupMenu</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorAccent">@color/dark_accent</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
    </style>

    <style name="Theme.Dark.PopupMenu" parent="android:style/Widget.Material.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>

        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>

        <item name="android:popupBackground">@color/dark_accent</item>
    </style>

    <style name="Theme.Dark.ActionBar" parent="android:style/Widget.Material.ActionBar">
        <item name="android:background">@color/dark_bar</item>
    </style>
</resources>